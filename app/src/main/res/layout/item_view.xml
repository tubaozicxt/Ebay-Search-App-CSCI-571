<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/itemlayout">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/item_imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@+id/item_imageView"
        android:layout_toRightOf="@+id/item_imageView"
        android:layout_toEndOf="@+id/item_imageView"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/item_imageView"
        android:layout_alignRight="@+id/item_title"
        android:layout_alignEnd="@+id/item_title"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>


</RelativeLayout>

